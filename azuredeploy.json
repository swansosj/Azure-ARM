{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "customerName": {
            "type": "string",
            "metadata": {
                "description": "Name of Customer"
            }
        }
    },
    "functions": [],
    "variables": {
        "automationAccountName": "[concat(parameters('customerName'),'-aa-prod-',resourceGroup().location,'-000')]",
        "automationAccountID": "[resourceId('Microsoft.Automation/automationAccounts', variables('automationAccountName'))]"
    },
    "resources": [
        {
            "name": "[variables('automationAccountName')]",
            "type": "Microsoft.Automation/automationAccounts",
            "apiVersion": "2022-08-08",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
                "sku": {
                    "name": "Free"
                }
            }
        },
        {
            "name": "[concat('parent', '/', 'automationRunbook1')]",
            "type": "Microsoft.Automation/automationAccounts/runbooks",
            "apiVersion": "2022-08-08",
            "location": "[resourceGroup().location]",
            "tags": {},
            "dependsOn": [
                "[variables('automationAccountID')]"
            ],
            "properties": {
                "logVerbose": true,
                "logProgress": true,
                "runbookType": "Script",
                "publishContentLink": {
                    "uri": "uri",
                    "version": "1.0.0.0"
                },
                "description": "description"
            }
        }
    ],
    "outputs": {}
}